        <client_script><![CDATA[function($scope, spUtil) {
  /* widget controller */
  var c = this;
	
	c.data.assets = [];
	c.data.checkedOutAssests = [];
	c.data.assetsInTransfer = [];
	
	for(i = 0; i < 100; i++){
		c.data.assets.push(
			{"name": "name " + i}
		)
		c.data.checkedOutAssests.push(
			{"name": "Checked out " + i}
		)
		c.data.assetsInTransfer.push(
			{"name": "Transfer " + i}
		)
	}
	
	
	
	$scope.sort = function(keyname){
	   $scope.sortKey = keyname;
	   $scope.reverse = !$scope.reverse;
	};
	
	spUtil.recordWatch($scope, "", "", function(name, data) {  
			spUtil.update($scope);
	});

}]]></client_script>
