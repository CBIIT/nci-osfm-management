        <client_script><![CDATA[function($scope, spUtil) {
  /* widget controller */
  var c = this;
	
	
	$scope.sort = function(keyname){
	   $scope.sortKey = keyname;
	   $scope.reverse = !$scope.reverse;
	};
	
	spUtil.recordWatch($scope, "", "", function(name, data) {  
			spUtil.update($scope);
	});

}]]></client_script>
