  /* widget controller */
  var c = this;
	
	
	c.reportType = "Assets transfer/ed";
	c.startDate = ""
	c.endDate = ""
	
	c.reportTypeOptions = ["Assets transfer/ed", "Assets checked in/out"]
		 
	$scope.sort = function(keyname){
	   $scope.sortKey = keyname;
	   $scope.reverse = !$scope.reverse;
	};
	
	spUtil.recordWatch($scope, "", "", function(name, data) {  
			spUtil.update($scope);
	});
	

}]]></client_script>
